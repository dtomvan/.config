#!/bin/bash

pushd ~/.minecraft
mkdir -p $HOME/.lunarclient/logs/

DATE=$(date +%F)
AMOUNT=$(ls ~/.lunarclient/logs/1.8*.log -1 | wc -l)

~/.lunarclient/jre/1.8/zulu16.30.15-ca-fx-jdk16.0.1-linux_x64/bin/java \
-javaagent:"$HOME/solar-patcher.jar=$HOME/config.example.json" \
--add-modules jdk.naming.dns \
--add-exports jdk.naming.dns/com.sun.jndi.dns=java.naming \
-Djna.boot.library.path="$HOME/.lunarclient/offline/1.8/natives" \
--add-opens java.base/java.io=ALL-UNNAMED \
-Xms3072m -Xmx3072m \
-Djava.library.path="$HOME/.lunarclient/offline/1.8/natives" \
-cp "$HOME/.lunarclient/offline/1.8/lunar-assets-prod-1-optifine.jar:$HOME/.lunarclient/offline/1.8/lunar-assets-prod-2-optifine.jar:$HOME/.lunarclient/offline/1.8/lunar-assets-prod-3-optifine.jar:$HOME/.lunarclient/offline/1.8/lunar-libs.jar:$HOME/.lunarclient/offline/1.8/lunar-prod-optifine.jar:$HOME/.lunarclient/offline/1.8/OptiFine.jar:$HOME/.lunarclient/offline/1.8/vpatcher-prod.jar" \
com.moonsworth.lunar.patcher.LunarMain \
--version 1.8 \
--accessToken 0 \
--assetIndex 1.8 \
--userProperties {} \
--gameDir "$HOME/.minecraft" \
--texturesDir "$HOME/.lunarclient/textures" \
--width 1904 \
--height 1040 2>&1 | tee ~/.lunarclient/logs/1.8-$DATE-$AMOUNT.log

TOOK="$SECONDS"
EPOCH='jan 1 1970'
FILE=~/gamin.txt

calc_date() {
    a=( $(date -u -d "$*" +"%j days %H:%M:%S") )
    a[0]=$((10#${a[0]}-1)); echo "${a[@]}"
}

minify_date() {
    date -u -d "$EPOCH $* seconds" +%s
}

OLD_TIME_STAMP=$(minify_date $(cat "$FILE"))

calc_date "$EPOCH + $TOOK seconds + $OLD_TIME_STAMP seconds" > $FILE
popd
